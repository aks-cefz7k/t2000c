<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <me.xfans.lib.voicewaveview.VoiceWaveView
                android:id="@+id/voiceWaveView0"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                app:lineColor="@color/colorPrimary"
                app:waveMode="left_right"
                android:gravity="center"
        />
        <me.xfans.lib.voicewaveview.VoiceWaveView
                android:id="@+id/voiceWaveView1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"

        />
        <me.xfans.lib.voicewaveview.VoiceWaveView
                android:id="@+id/voiceWaveView2"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                app:lineColor="#3D9673"
                app:waveMode="left_right"
                android:gravity="bottom|center_horizontal"
        />
        <me.xfans.lib.voicewaveview.VoiceWaveView
                android:id="@+id/voiceWaveView3"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                app:lineColor="@color/colorAccent"
                app:waveMode="up_down"
                android:gravity="center"
        />
        <me.xfans.lib.voicewaveview.VoiceWaveView
                android:id="@+id/voiceWaveView4"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                app:lineColor="@color/colorAccent"
                app:waveMode="left_right"
                android:gravity="left|bottom"
        />
        <me.xfans.lib.voicewaveview.VoiceWaveView
                android:id="@+id/voiceWaveView5"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                app:lineWidth="10dp"
                app:lineColor="@color/colorAccent"
                app:waveMode="left_right"
                android:gravity="right|center_vertical"
        />
    </LinearLayout>

</ScrollView>